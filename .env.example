# MedWard Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ==================================
# Application Settings
# ==================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==================================
# Authentication & Security
# ==================================
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-this

# Generate encryption key: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-change-this

# ==================================
# OpenAI Configuration
# ==================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Set a specific model (default: gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# Optional: Set organization ID
# OPENAI_ORGANIZATION=org-your-organization-id

# ==================================
# Google Cloud Vision API
# ==================================
# Option 1: JSON credentials as string (for production/Docker)
GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Option 2: Path to credentials file (for local development)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# ==================================
# Google Drive API (for backup/sync)
# ==================================
# OAuth 2.0 credentials from Google Cloud Console
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# You'll get this after first OAuth authorization
# GOOGLE_REFRESH_TOKEN=your-refresh-token-will-be-generated

# ==================================
# Google Apps Script Integration
# ==================================
# Deployed Google Apps Script web app URL for API integration
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/AKfycbz5I5uGmK3f-_k7pi9HMsW1YMANS8NGnC8-kIDxcEB1vesYXpmwNHRnQRGX_GqV19iWJw/exec

# Enable/disable GAS integration (default: false)
ENABLE_GAS_INTEGRATION=false

# ==================================
# PostHog Analytics & Bug Tracking
# ==================================
# Get your API key from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here

# PostHog host (default: https://app.posthog.com)
# Use this if you're self-hosting PostHog
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==================================
# Database Configuration
# ==================================
DATABASE_PATH=./data/medward.db
KNOWLEDGE_DB_PATH=./data/knowledge.db
AUDIT_DB_PATH=./data/audit.db

# ==================================
# Rate Limiting
# ==================================
# API rate limit (requests per minute per user)
RATE_LIMIT_API=60

# AI endpoint rate limit (requests per minute per user)
RATE_LIMIT_AI=20

# Upload rate limit (requests per minute per user)
RATE_LIMIT_UPLOAD=10

# ==================================
# Optional: Analytics & Monitoring
# ==================================
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ==================================
# Optional: Email (for notifications)
# ==================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=MedWard <noreply@medward.app>

# ==================================
# Development Settings
# ==================================
# Disable telemetry in development
NEXT_TELEMETRY_DISABLED=1

# Enable debug logging
# DEBUG=medward:*

# ==================================
# Production Settings
# ==================================
# Uncomment and set these for production deployment

# SSL/TLS Certificate paths (for custom domains)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Session timeout (in seconds, default 7 days)
# SESSION_TIMEOUT=604800

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==================================
# Feature Flags
# ==================================
# Enable/disable specific features
ENABLE_GOOGLE_DRIVE_SYNC=true
ENABLE_OFFLINE_MODE=true
ENABLE_SELF_LEARNING=true
ENABLE_VOICE_INPUT=false

# ==================================
# Notes
# ==================================
# 1. Never commit .env.local to version control
# 2. Keep API keys secure and rotate them regularly
# 3. Use strong, unique values for JWT_SECRET and ENCRYPTION_KEY
# 4. For production, use environment variables in your hosting platform
# 5. Ensure Google Cloud APIs are enabled in your project
